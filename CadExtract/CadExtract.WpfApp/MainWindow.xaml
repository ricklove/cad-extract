<Window x:Class="CadExtract.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CadExtract.WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="txtFilePath" Width="120"/>
            <Button x:Name="btnBrowse" Content="Browse" Click="BtnBrowse_Click"/>

            <Button x:Name="btnLoad" Margin="10,0,0,0" Content="Load" Click="BtnLoad_Click"/>
        </StackPanel>
        <TabControl Grid.Row="1">
            <TabItem Header="Raw">
                <local:RawView x:Name="compRawView"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
